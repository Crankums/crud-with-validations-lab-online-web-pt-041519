<%= form_for @song, do |f| %>
  <% if @song.errors.any? %>
    <div id="error_message">
      <h2>There was a problem...</h2>

      <ul>
        <% @song.errors.full_messages.each do |message| %>
        <li><%=message%></li>
        <% end %>
      </ul>
    </div>
    <%end%>

<%= f.label :title %>
<%= f.text_field :title, @song.title %>

<%= f.label :released %>
<%= f.check_box :released, @song.released %>

<%= f.label :release_year %>
<%= f.text_field :release_year, @song.release_year %>

<div class="field">
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, @song.artist_name %>
</div>
<div class="field">
    <%= f.label :genre %>
  <%= f.text_field :genre, @song.genre %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
